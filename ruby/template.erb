# System
$config['system’]['domain’] = "<%= hash['system']['domain'] %>";

# Set DNS servers
<% hash['system']['dnsserver'].each do |key, value| %>
$config['system']['dnsserver'][<%= key %>] = "<%= value['ip'] %>";
<% end %>

# Interfaces
<% hash['interfaces'].each do |key, value| %>
<% value.each do |parameter, setting| %>
$config['interfaces'][<%= key %>]['<%= parameter %>'] = "<%= setting %>";
<% end %>
<% end %>

# Create VLAN's
<% hash['vlans']['vlan'].each do |key, value| %>
<% value.each do |parameter, setting| %>
$config['vlans']['vlan'][<%= key %>]['<%= parameter %>'] = "<%= setting %>";
<% end %>
<% end %>
